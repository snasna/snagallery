<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.snagallery.test.post.dao.PostDAO">
	
	<insert id="insertPost" parameterType="map">
		INSERT INTO 
			`post`
		(
			`userId`
			, `topic`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUES 
		(
			#{userId}
			, #{topic}
			, #{title}
			, #{content}
			, #{imagePath}
			, now()
			, now()
		)
		  
	
	</insert>
	
	<select id="selectPostList" parameterType="int"
	resultType="com.snagallery.test.post.model.Post">
		SELECT 
			`id`
			, `userId`
			, `topic`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM 
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY  
			`id` DESC
	
	</select>
	
	<select id="selectPost" parameterType="int"
	resultType="com.snagallery.test.post.model.Post">
		SELECT 
			`id`
			, `userId`
			, `topic`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM 
			`post`
		WHERE
			`topic` = #{topic} 
			,`id` = #{id}
	
	</select>
	
	<update id="updatePost" parameterType="map">
	
		UPDATE 
			`post`
		SET 
			`topic` = # {topic}
			, `subject` = #{title}
			, `content` = #{content}
			, `updatedAt` = now()
		WHERE 
			`id` = #{id}
	
	</update>
	
	<delete id="deletePost" parameterType="int">
	
		DELETE FROM 
			`post`
		WHERE
			`id` = #{id}
	</delete>
	
	


</mapper>